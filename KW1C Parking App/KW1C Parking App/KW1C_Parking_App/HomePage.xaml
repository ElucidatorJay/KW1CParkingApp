<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KW1C_Parking_App.HomePage"
             BackgroundColor="#1B84C5">
             
    <ContentPage.Content>
        <!--homepagina met logo-->
        <StackLayout WidthRequest="400">
            <Image Source="KW1C.jpg" HeightRequest="250" WidthRequest="300"></Image>
            <!--3 buttons voor openen van pagina-->
            <Button Text="Beschikbare Pakeerplaatsen" HeightRequest="60" WidthRequest="100" Clicked="OpenParkeerplaatsen"></Button>
            <Button Text="Zoek mijn auto" HeightRequest="60" WidthRequest="75" Clicked="OpenZoekAuto"></Button>
            <Button Text="Openingstijden" HeightRequest="60" WidthRequest="75" Clicked="OpenTijden"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>